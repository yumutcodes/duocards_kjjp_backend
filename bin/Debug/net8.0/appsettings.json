{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=localhost;Port=3306;Database=fitnessapp;User=your_user;Password=your_password;SslMode=None;AllowPublicKeyRetrieval=True;UseAffectedRows=False;"
  },
  "Jwt": {
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 90,
    "Secret": "your-secret-key-here-minimum-32-characters-long-change-in-production",
    "Issuer": "FitnessApp.Api",
    "Audience": "FitnessApp.Client"
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 15,
    "PasswordHistoryCount": 5,
    "MinPasswordLength": 8,
    "RequireDigit": true,
    "RequireUppercase": true,
    "RequireSpecialChar": true
  },
  "Google": {
    "ClientId": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
  }
}